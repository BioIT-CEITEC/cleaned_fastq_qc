{
  "workflow_description": {
    "name": "cleaned_fastq_qc",
    "version": 1.0,
    "label": "Cleaned fastq QC",
    "type": "cleaned_fastq_qc",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "cleaned_fastq/{sample}*fastq.gz",
      "logs/*",
      "qc_reports/*"
    ],
    "report_index": "qc_reports/cleaned_fastq_multiqc.html",
    "reports": [
      "qc_reports/cleaned_fastq_multiqc.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "UMI"
  ],
  "gui_params": {
    "primary": {
      "RNAseq_type" : {
        "label": "RNAseq type",
        "type": "enum",
        "default": "classic_rev",
        "list": {
          "classic_unstd": "Classic Unstranded",
          "classic_fwd": "Classic Forward",
          "classic_rev": "Classic Reverse",
          "quant_fwd": "QuantSeq FWD",
          "quant_rev": "QuantSeq REV",
          "sense": "Lexogen SENSE",
          "corall": "Lexogen CORALL"
        }
      },
      "type_of_extraction": {
        "label": "Type of extraction",
        "type": "enum",
        "default": "PolyA",
        "list": {
          "PolyA": "PolyA",
          "rRNA": "rRNA"
        }
      }
    },
    "detailed": {
      "strandness": {
        "label": "Strandness (unstr,fwd,rev)",
        "type": "enum",
        "default": "unstr",
        "list": {
          "unstr": "Unstranded",
          "fwd": "Forward",
          "rev": "Reverse"
        },
        "conditions": {
          "value": {
            "RNAseq_type": {
              "classic_fwd": "fwd",
              "classic_rev": "rev",
              "quant_fwd": "fwd",
              "quant_rev": "fwd",
              "sense": "rev"
            }
          }
        }
      },
      "trim_adapters": {
        "label": "Trim adapters",
        "type": "string",
        "default": ""
      },
      "trim_left1": {
        "label": "Trim left 1",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_fwd": 12,
              "sense": 9
            },
            "UMI": {
              "Quantseq FWD": 6
            }
          }
        }
      },
      "trim_left2": {
        "label": "Trim left 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_rev": 12,
              "sense": 6
            }
          }
        }
      },
      "trim_right1": {
        "label": "Trim right 1",
        "type": "int",
        "default": 0
      },
      "trim_right2": {
        "label": "Trim right 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "UMI": {
              "CORALL": 9
            }
          }
        }
      },
      "min_length": {
        "label": "Min length",
        "type": "int",
        "default": 35
      }
    }
  }
}
